<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04 Nov 2025, 21:15"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:alpha="0.8" />
        <LinearLayout
            android:id="@+id/layoutImages"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Ảnh món chính -->
            <ImageView
                android:id="@+id/imgMainFood"
                android:layout_width="90dp"
                android:layout_height="70dp"

                android:scaleType="centerCrop"
                android:src="@drawable/im_food_default"
              />

            <!-- Ảnh món phụ (nếu có) -->
            <ImageView
                android:id="@+id/imgSecondFood"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"

                android:scaleType="centerCrop"
                android:src="@drawable/im_food_default"
                 />

            <FrameLayout
                android:id="@+id/layoutMoreFoods"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
               >

                <ImageView
                    android:id="@+id/imgMoreFoods"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/im_food_default"
                     />

                <TextView
                    android:id="@+id/tvMoreFoods"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="+2"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="#80000000" />
            </FrameLayout>
        </LinearLayout>

        <!-- Tên / tóm tắt đơn -->
        <TextView
            android:id="@+id/tvItemsSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trà sữa truyền thống x1 · Khoai tây chiên x2 · +1 món"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp" />

        <!-- Hàng thông tin phụ: ngày, trạng thái, tổng tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng(4 món): ₫85.000"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#FF5722"
                android:textSize="12sp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/button_v1"
                android:layout_marginHorizontal="15dp"
                android:text="Đánh giá"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#FFF"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="12sp"
                android:background="@drawable/button_v2"
                android:text="Xem chi tiết"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
